snippet div "XHTML <div> " w
<div`!p
snip.rv = ' class="' if t[1] else ''
`${1:class}`!p
snip.rv = '"' if t[1] else ''
`>
	${2}
</div>
$0
endsnippet

snippet "([a-z][a-z0-9]*) ([\S ]+)" "<tag class=> " br
<`!p snip.rv = match.group(1)` class="`!p snip.rv = match.group(2)`">
	$0
</`!p snip.rv = match.group(1)`>
endsnippet

snippet "_([a-z][a-z0-9]*) ([\S ]+)" "Inline <tag class=> " r
<`!p snip.rv = match.group(1)` class="`!p snip.rv = match.group(2)`">$0</`!p snip.rv = match.group(1)`>
endsnippet

snippet hform-in "Form control - input" b
<div class="form-group">
	<label for="`!p snip.rv=lbl2id(t[1])`" class="control-label col-${2:sm-2}">
		${1:label}
	</label>
	<div class="col-${3:sm-4}">
		<input type="text" class="form-control$4" id="`!p snip.rv=lbl2id(t[1])`"
						ng-model="${5:model}"
						placeholder="${6:placeholder}"/>
	</div>
</div>$0
endsnippet

