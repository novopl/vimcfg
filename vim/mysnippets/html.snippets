global !p
def reopt(match, gnum, default):
	return match.group(gnum) if match.group(gnum-1) != None else default

def lbl2id(label):
	return label.lower().replace(' ', '_')

def cond(token, value):
	return value if token != None else '' 

import re
kC2WFirstCap	= re.compile('(.)([A-Z][a-z]+)')
kC2WSecondCap = re.compile('(.)([A-Z][a-z]+)')
def camel2words(name):
	s1 = kC2WFirstCap.sub(r'\1,\2', name)
	return kC2WSecondCap.sub(r'\1,\2', s1).lower().split(',')

endglobal

